<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".view.fragment.OtpFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_logo_jenius"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/card_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52"
        app:tint="@color/grey_50" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/card_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_otp_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:alpha="0.5"
            android:src="@drawable/ic_baseline_lens_24"
            app:tint="@color/grey_50" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_otp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:alpha="0.5"
            android:src="@drawable/ic_baseline_lens_24"
            app:tint="@color/grey_50" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_otp_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:alpha="0.5"
            android:src="@drawable/ic_baseline_lens_24"
            app:tint="@color/grey_50" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_otp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:alpha="0.5"
            android:src="@drawable/ic_baseline_lens_24"
            app:tint="@color/grey_50" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_otp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:alpha="0.5"
            android:src="@drawable/ic_baseline_lens_24"
            app:tint="@color/grey_50" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_otp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:alpha="0.5"
            android:src="@drawable/ic_baseline_lens_24"
            app:tint="@color/grey_50" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_form"
        style="@style/Theme.Card.RoundTopCorner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.66"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:text="Autentikasi"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                tools:text="Masukkan 6 angka kode verifikasi yang dikirim lewat sms ke 081 xxx xxx 123" />

            <GridLayout
                android:id="@+id/lay_keys"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="3"
                android:rowCount="4">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_1"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_2"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_3"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_4"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="4" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_5"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="5" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_6"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_7"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="7" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_8"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="8" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_9"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_0"
                    style="@style/Theme.Button.Round.Borderless"
                    android:text="0" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_key_del"
                    style="@style/Theme.Button.Round.Borderless"
                    app:icon="@drawable/ic_baseline_keyboard_backspace_24"
                    app:iconTint="@color/primary" />
            </GridLayout>

            <ProgressBar
                android:id="@+id/progress_otp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:indeterminateTint="@color/accent"
                android:visibility="gone" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>