<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jenius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="SplashTheme" parent="Theme.Jenius">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.Button.Round.Borderless" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">56dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorDarkTransparent</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
    </style>

    <style name="Theme.Button.Round.Outlined" parent="Theme.Button.Round.Borderless">
        <item name="strokeWidth">2dp</item>
        <item name="android:padding">0dp</item>
        <item name="strokeColor">@color/grey_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_50</item>
    </style>

    <style name="Theme.Button.Round.Menu" parent="Theme.Button.Round.Borderless">
        <item name="backgroundTint">@color/blue_50</item>
        <item name="iconTint">@color/primary</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_rowWeight">0</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.Button.Filled" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/colorLightTransparent</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/grey_50</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="Theme.Text.Menu" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Card.RoundTopCorner" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>
</resources>